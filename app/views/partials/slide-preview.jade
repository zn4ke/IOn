.slide-player.light-border( ng-controller="SlidePreviewCtrl")
    .btn.btn-primary.btn-xs
        span.glyphicon.glyphicon-fast-backward( ng-click="activeSlideNr = 0" )
    .btn.btn-primary.btn-xs
        span.glyphicon.glyphicon-step-backward( ng-click="activeSlideNr = activeSlideNr - 1" )
    .btn.btn-primary.btn-xs
        span.glyphicon.glyphicon-step-forward( ng-click="activeSlideNr = activeSlideNr + 1" )
    span &nbsp;
    .btn.btn-primary.btn-xs
        span.glyphicon.glyphicon-zoom-in( ng-click="zoomFactor = zoomFactor + 10" )
    .btn.btn-primary.btn-xs
        span.glyphicon.glyphicon-zoom-out( ng-click="zoomFactor = zoomFactor - 10" )
    .btn.btn-primary.btn-xs.pull-right
        span.glyphicon.glyphicon-edit( ng-click="editSlide(this)" )
    span &nbsp; # {{ activeSlideNr + 1 }} / {{data.selected.deck.slides.length}} zoom: {{zoomFactor}} %
    div( ng-hide="activeSlide")
        div.light-border( dynamic="template" ng-style="zoomStyle")
            .jumbotron
                .btn.btn-primary(ng-click="activeSlideNr = 0") Start
    div( ng-hide="!activeSlide")
        div.light-border( dynamic="template", ng-style="zoomStyle")
    div( ng-hide="!activeSlide")
        div.mobile-border
            div.mobile-inner( dynamic="templateMobile" )