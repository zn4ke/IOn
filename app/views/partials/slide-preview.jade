.slide-player.light-border( ng-controller="SlidePreviewCtrl")
    .btn.btn-primary.btn-xs( ng-click="data.selected.slideNr = 0" )
        span.glyphicon.glyphicon-fast-backward
    .btn.btn-primary.btn-xs( ng-click="data.selected.slideNr = data.selected.slideNr - 1" )
        span.glyphicon.glyphicon-step-backward
    .btn.btn-primary.btn-xs( ng-click="data.selected.slideNr = data.selected.slideNr + 1" )
        span.glyphicon.glyphicon-step-forward
    span &nbsp;
    .btn.btn-primary.btn-xs( ng-click="zoomFactor = zoomFactor + 10" )
        span.glyphicon.glyphicon-zoom-in
    .btn.btn-primary.btn-xs( ng-click="zoomFactor = zoomFactor - 10" )
        span.glyphicon.glyphicon-zoom-out
    .btn.btn-danger.btn-xs.pull-right( ng-show="data.selected.slide", ng-click="deleteSlide(this)" )
        span.glyphicon.glyphicon-trash
    .btn.btn-primary.btn-xs.pull-right( ng-show="data.selected.slide", ng-click="editSlide(this)" )
        span.glyphicon.glyphicon-edit
    span &nbsp; # {{ data.selected.slideNr + 1 }} / {{data.selected.deck.slides.length}} zoom: {{zoomFactor}} %
    div( ng-hide="data.selected.slide")
        div.light-border( dynamic="template" ng-style="app.player.zoomStyle")
            .jumbotron
                .btn.btn-primary(ng-click="data.selected.slideNr = 0") Start
    div( ng-hide="!data.selected.slide")
        div.light-border( dynamic="template", ng-style="app.player.zoomStyle")
    div( ng-hide="!data.selected.slide")
        div.light-border
            div(style="width:100%;")
                div.mobile-inner( dynamic="templateMobile" )