div( ng-controller="SlideYunCtrl" ) YUN presentation
    div.light-border
        h3 Temperatur 1: 
            strong {{yunData.value.thermo}} °C
    div.light-border
        h3 Temperatur 2: 
            strong {{yunData.value.thermo2}} °C
    div.light-border
        h3 Brightness
            em {{yunData.value.light}}
    div.container
        .row
            .col-xs-8
                div( ui-chart="records", chart-options="testOptions" )
    p Adresse:
        input( type="text", ng-model="address" )
        .btn.btn-default( ng-click="Yun.address(address)") Update Adress
    p Key:
        input( type="text", ng-model="key" )
    p Value:
        input( type="text", ng-model="value" )
    p record:
        input( type="checkbox", ng-model="record", ng-change="toggleRecord()" )
    p interval:
        input( type="text", ng-model="interval" )
    .btn.btn-primary( ng-click="getYunData(key)" ) GET
    .btn.btn-primary( ng-click="setYunData(key, value)" ) SET