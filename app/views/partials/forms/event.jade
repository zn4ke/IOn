.row(ng-controller="AdminContentCtrl")
    .col-sm-12
        h1 Event Form
    
    .col-sm-12
        form.form(name='form', ng-submit='submitForm("event")')
            .form-group()
                label Name
                input.form-control(type='text', name='name', ng-model='formData.name')

            .form-group()
                label Beschreibung
                input.form-control(type='textbox', name='desc', ng-model='formData.desc')

            .form-group()
                label Gruppe
                div(ng-init="formData.group='wähle eine Gruppe'")
                .btn.btn-primary(ng-click="choose('groups', 'group' )") {{meta.group}} {{formData.group}}
            .form-group()
                label Deck
                div(ng-init="formData.deck='wähle eine Deck'")
                .btn.btn-primary(ng-click="choose('decks', 'deck' )") {{meta.deck}} {{formData.deck}}
            .form-group()
                label Optionen
                br
                input(type='checkbox', name='pub', ng-model='formData.pub')  
                span &nbsp; öffentlich 
                span( ng-show="formData.pub" )
                    input(type='text', name='key', ng-model='formData.accessKey') 
                    span &nbsp; Zugangscode

            button.btn.btn-lg.btn-primary(type='submit') Send
