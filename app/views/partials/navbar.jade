.header(ng-controller='NavbarCtrl')
    a.nav-pills.navbar-brand Brand
    ul.nav.nav-bar.nav-pills
        li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')
            a(ng-href='{{item.link}}', ng-show='currentUser', access='{{item.access}}') {{item.title}}
        li.pull-right(ng-hide='currentUser', ng-class='{active: isActive("/login")}')
            a(href='/login') Login
        li.pull-right(ng-hide='currentUser', ng-class='{active: isActive("/signup")}')
            a(href='/signup') Sign up
        li.pull-right(ng-show='currentUser')
            a.dropdown-toggle( data-toggle='dropdown') {{currentUser.name}}
            ul.dropdown-menu
                li(ng-class='{active: isActive("/logout")}')
                    a(href='', ng-click='logout()') Logout
                li
                    a(href='/profile') Profile
