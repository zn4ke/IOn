div(ng-controller='NavbarCtrl')
    div
        a.nav-pills.navbar-brand(ng-click='app.showControls = !app.showControls') Studi

        

        ul.nav.nav-bar.nav-pills
            li(ng-repeat='item in app.nav', ui-sref-active="active")
                a(ui-sref='{{item.sref}}', access-level="{{item.access}}") {{item.title}}
            li.pull-right(ng-hide='user', ng-class='{active: isActive("/login")}')
                a(href='/login') Login
            li.pull-right(ng-hide='user', ng-class='{active: isActive("/signup")}')
                a(href='/signup') Sign up
            li.pull-right()
                a.dropdown-toggle( data-toggle='dropdown') {{user.name}}
                ul.dropdown-menu
                    li(ng-class='{active: isActive("/logout")}')
                        a(href='', ng-click='logout()') Logout
                    li
                        a(href='/profile') Profile
            li
                .btn.btn-danger err: {{error}}